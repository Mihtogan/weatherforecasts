<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:backgroundTint="#658DAC"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/teViTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/weatherIkonHour"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/teViTime"
            app:layout_constraintStart_toStartOf="@+id/teViTime"
            app:layout_constraintTop_toBottomOf="@+id/teViTime"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tempHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="+14C*"
            app:layout_constraintEnd_toEndOf="@+id/weatherIkonHour"
            app:layout_constraintStart_toStartOf="@id/weatherIkonHour"
            app:layout_constraintTop_toBottomOf="@id/weatherIkonHour" />

        <TextView
            android:id="@+id/prec_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="10mm"
            app:layout_constraintEnd_toEndOf="@+id/weatherIkonHour"
            app:layout_constraintStart_toStartOf="@id/weatherIkonHour"
            app:layout_constraintTop_toBottomOf="@id/tempHour" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>